process {
  executor = 'local'
  cpus = { 2 }
  memory = { 8.GB }
  time = { 2.h }

  errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
  maxRetries = 1
  maxErrors = '-1'
  
  // Environment modules and resource requirements
  $makeSTARindex {
      cpus = { 10 }
      memory = { 60.GB }
      time = { 5.h }
  }
  $makeHISATindex {
    cpus = { 10 }
    memory = { 60.GB }
    time = { 5.h }
  }
  $trim_galore{
    cpus = { 2 }
    memory = { 16.GB }
    time = { 8.h }
  }
  $star {
    cpus = { 10 }
    memory = { 80.GB }
    time = { 8.h }
  }
  $hisat2Align {
    cpus = { 8 }
    memory = { 64.GB }
    time = { 8.h }
  }
  $hisat2_sortOutput {
    cpus = { 4 }
    memory = { 32.GB }
    time = { 8.h }
  }
  $rseqc {
    cpus = { 8 }
    memory = { 32.GB }
    time = { 7.h }
  }
  $markDuplicates {
    cpus = { 2 }
    memory = { 16.GB }
  }
  $dupradar {
    cpus = { 2 }
    memory = { 16.GB }
  }
  $sample_correlation {
    cpus = { 2 }
    memory = { 16.GB }
  }
}
